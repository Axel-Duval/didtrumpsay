{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch server",
            "cwd": "${workspaceFolder}/server",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "args": [
                "${workspaceFolder}/server/src/index.ts"
            ],
            "env": {
                "NODE-ENV": "development",
                "TS_NODE_PROJECT": "${workspaceFolder}/server/tsconfig.json"
            }
        }
    ]
}